<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:layout_editor_absoluteX="-32dp"
        tools:layout_editor_absoluteY="95dp">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="183dp"
            android:layout_marginEnd="66dp"
            android:fontFamily="@font/roboto_light"
            android:text="City"
            android:textAlignment="center"
            android:textSize="65sp" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_below="@+id/tv_city_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="91dp"
            android:fontFamily="@font/roboto_light"
            android:text="T"
            android:textAlignment="center"
            android:textSize="135sp" />

        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_temperature"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="105dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="106dp"
            android:fontFamily="@font/roboto_light"
            android:text="Condition"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_condition"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="265dp"
            android:fontFamily="@font/roboto_light"
            android:text="Hum"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_windSpeed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_condition"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="265dp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="52dp"
            android:text="Speed"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_humidity"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="284dp"
            app:srcCompat="@drawable/humidity" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_windSpeed"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="297dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="74dp"
            app:srcCompat="@drawable/wind_speed" />

        <EditText
            android:id="@+id/edittext_city_name"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="123dp"
            android:ems="10"
            android:fontFamily="@font/roboto_light"
            android:hint="Enter city name"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/but_search_city"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/search"
            android:onClick="changeCity" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>